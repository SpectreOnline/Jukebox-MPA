@model Jukebox.Models.User

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row justify-content-md-center slide-intro-left-1" style="margin-top: 10vh;">
    <div class="col-lg-4">
        <div class="card">
            <h2 class="card-header">
                Login
            </h2>
            <div class="card-body">
                @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email)
                        @Html.TextBoxFor(m => m.Email, "", new { @class = "form-control", @placeholder = "Email" })

                    </div>
                    <div class="form-group">

                        @Html.LabelFor(m => m.Password)
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
                    </div>
                    @Html.ActionLink("Don't have an account? Register now!", "Register")
                    <div class="form-group">
                        <input type="submit" name="submit" class="btn btn-primary" value="Login" />
                    </div>
                }
            </div>
        </div>
    </div>
    <div id="myCarousel" class="carousel slide rounded col-lg-8 slide-intro-left-2" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <div class="carousel-inner" style="height: 65vh;" id="myCarousel">

            <div class="item active" style="height: 100%; margin: auto; ">
                <img alt="test2" class="carouselImg" id="0" style="height: 100%; margin: auto;">
                <div class="carousel-caption">
                    <h3>Add any song you'd like</h3>
                    <p>I hope you enjoy the songs the WebApp!</p>
                </div>
            </div>

            <div class="item" style="height: 100%; margin: auto; ">
                <img alt="test2" class="carouselImg" id="1" style="height: 100%; margin: auto;">
                <div class="carousel-caption">
                    <h3>Create your own playlists!</h3>
                    <p>I hope you enjoy the songs the WebApp!</p>
                </div>
            </div>

            <div class="item" style="height: 100%; margin: auto; ">
                <img alt="test2" class="carouselImg" id="2" style="height: 100%; margin: auto;">
                <div class="carousel-caption">
                    <h3>Convert a queue into a playlist!</h3>
                    <p>I hope you enjoy the songs the WebApp!</p>
                </div>
            </div>
        </div>

        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>


<script>
    var carousel = document.getElementById('carousel');

    var carouselImgCollection = document.querySelectorAll(".carouselImg");

    carouselImgCollection.forEach(findImgAndReplaceSource);

    function findImgAndReplaceSource(image) {
        var linkString = "https://picsum.photos/";
        linkString += screen.width + "/";
        linkString += screen.height + "?random=" + image.id;
        image.src = linkString;
    }

</script>
