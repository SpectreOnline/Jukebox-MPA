@model IEnumerable<Jukebox.Playlists>
 

@{
    ViewBag.Title = "Adding to playlist";

    var id = ViewContext.RouteData.Values["id"];
}

<h2>Select a playlist to add the song to</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Creator)
        </th>
        <th></th>
    </tr>



    @foreach (var playlist in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => playlist.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => playlist.Creator)
            </td>
            <td>
                @Html.ActionLink("Add to this playlist", "AddToPlaylist", new { currentPlaylistID = playlist.ID, currentSongID = id})
            </td>
        </tr>
    }
</table>
